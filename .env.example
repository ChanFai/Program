# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spt_system
DB_USER=postgres
DB_PASSWORD=your_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS配置
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SUPPORT_ROLE_ARN=arn:aws:iam::account:role/SupportRole

# SQS队列
AWS_HEALTH_QUEUE_URL=https://sqs.region.amazonaws.com/account/health-events
AWS_SUPPORT_QUEUE_URL=https://sqs.region.amazonaws.com/account/support-updates

# 邮件配置
EMAIL_FROM=support@yourcompany.com
SES_REGION=us-east-1

# 应用配置
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret
FRONTEND_URL=http://localhost:5173

# SLA配置（分钟）
SLA_CRITICAL_RESPONSE=15
SLA_HIGH_RESPONSE=60
SLA_MEDIUM_RESPONSE=240
SLA_LOW_RESPONSE=1440
